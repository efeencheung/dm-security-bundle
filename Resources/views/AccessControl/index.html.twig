{% extends 'DmThemeBundle::layout.html.twig' %}

{% block breabcrumb %}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
        <i class="fa fa-dashboard"></i> <a href="{{ path('dashboard')}}">控制台</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
        <span>访问控制管理</span>
        </li>
    </ul>
</div>
{% endblock %}

{% block content_wrapper -%}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-layers font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">访问控制列表</span>
                </div>
                <div class="actions">
                    <a href="{{ path('accesscontrol_new') }}" class="btn btn-sm green"><i class="fa fa-plus"></i> 添加新访问控制</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-hover table-light">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>访问控制名称</th>
                                <th>授权角色</th>
                                <th>URI匹配模式</th>
                                <th>URI对应IP</th>
                                <th>URI对应HOST</th>
                                <th>URI对应HTTP方法</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.roles|join(',') }}</td>
                                <td>{{ entity.path }}</td>
                                <td>{{ entity.ip }}</td>
                                <td>{{ entity.host }}</td>
                                <td>{{ entity.methods }}</td>                            
                                <td>
                                    <a title="查看" href="{{ path('accesscontrol_show', { 'id': entity.id }) }}"><i class="fa fa-file-o"></i></a>
                                    <a title="编辑" href="{{ path('accesscontrol_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                    <a title="删除" href="{{ path('accesscontrol_show', { 'id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
